scilla_version 0

library Test

let one_msg = 
  fun (msg : Message) => 
    let nil_msg = Nil {Message} in
    Cons {Message} msg nil_msg

contract Test
()

field last_amount: Uint128 = Uint128 0

(* Just call contrB, passing contrC to it. Also pass on _amount. *)
transition b_accept_callC (addrC : ByStr20)
  accept;

  last_amount := _amount;

  e = {_eventname: "B"};
  event e;


  m = { _tag : "c_noaccept"; _amount : _amount; _recipient : addrC };
  ml = one_msg m;
  send ml
end

transition simply_accept ()
  accept
end
